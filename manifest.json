{
  "manifest_version": 3,
  "name": "SecurePass Generator",
  "version": "1.0.0",
  "description": "Modern password generator with strength indicator and dark mode theme",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SecurePass Generator"
  },
  "icons": {
    "16": "https://api.iconify.design/material-symbols:lock.svg?color=%233b82f6&width=16&height=16",
    "32": "https://api.iconify.design/material-symbols:lock.svg?color=%233b82f6&width=32&height=32",
    "48": "https://api.iconify.design/material-symbols:lock.svg?color=%233b82f6&width=48&height=48",
    "128": "https://api.iconify.design/material-symbols:lock.svg?color=%233b82f6&width=128&height=128"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}